{
  "name": "hieuchan-i18n",
  "version": "1.0.0",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "private": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./config": {
      "types": "./dist/types/config/index.d.ts",
      "import": "./dist/esm/config/index.mjs",
      "require": "./dist/cjs/config/index.cjs"
    },
    "./server": {
      "types": "./dist/types/server/index.d.ts",
      "import": "./dist/esm/server/index.mjs",
      "require": "./dist/cjs/server/index.cjs"
    },
    "./settings": {
      "types": "./dist/types/settings/index.d.ts",
      "import": "./dist/esm/settings/index.mjs",
      "require": "./dist/cjs/settings/index.cjs"
    },
    "./provider": {
      "types": "./dist/types/provider/index.d.ts",
      "import": "./dist/esm/provider/index.mjs",
      "require": "./dist/cjs/provider/index.cjs"
    },
    "./provider/TranslationsProvider": {
      "types": "./dist/types/provider/TranslationsProvider.d.ts",
      "import": "./dist/esm/provider/TranslationsProvider.mjs",
      "require": "./dist/cjs/provider/TranslationsProvider.cjs"
    },
    "./types": {
      "types": "./dist/types/types.d.ts",
      "import": "./dist/esm/types.mjs",
      "require": "./dist/cjs/types.cjs"
    },
    "./*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/*",
      "require": "./dist/cjs/*"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "build:clean": "rm -rf dist && npm run build",
    "publish-packages": "npm run build lint test && changeset version && changeset publish",
    "lint": "eslint . --max-warnings 0",
    "test": "echo \"INFO: no test specified\" && exit 0",
    "prettier": "prettier --write \"**/*.{js,ts,tsx}\""
  },
  "dependencies": {
    "i18next": "23.11.5",
    "i18next-resources-to-backend": "^1.2.1",
    "react-i18next": "14.1.3",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.57.0",
    "postcss": "^8.4.21",
    "rollup": "^4.9.6",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "typescript": "5.5.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
